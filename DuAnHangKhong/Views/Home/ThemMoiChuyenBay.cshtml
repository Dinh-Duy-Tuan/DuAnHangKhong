
@{
    ViewBag.Title = "ThemMoiChuyenBay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<main>
    <div class="page-section features" style="margin:300px 500px">
        <h4> Add new bay data </h4>

        <form action="~/Home/LuuThemMoiChuyenBay" method="post">
            <div class="form-group">
                <label for="email">Flight Number:</label>
                <input type="text" class="form-control" name="FlightNo">
            </div>

            <div class="form-group">
                <label for="pwd">Date:</label>
                <input type="date" class="form-control" name="Ngay">
            </div>

            <div class="form-group">
                <label for="pwd">Place of departure:</label>
                <input type="text" class="form-control" name="DiemDi">
            </div>

            <div class="form-group">
                <label for="pwd">Destination:</label>
                <input type="text" class="form-control" name="DiemDen">
            </div>

            <button type="submit" class="btn btn-default">Submit</button>
        </form>

    </div>

</main>